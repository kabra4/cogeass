{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cogeass",
  "version": "0.1.0",
  "identifier": "cogeass.io",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:5173/",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "",
    "longDescription": "",
    "resources": [],
    "copyright": "",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CoGeass",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https: http:;",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:default",
            "sql:default",
            "sql:allow-load",
            "sql:allow-close",
            "sql:allow-execute",
            "sql:allow-select"
          ]
        }
      ]
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:cogeass.db"],
      "scope": {
        "allowed": [
          {
            "path": "sqlite:cogeass.db"
          }
        ]
      }
    }
  }
}
